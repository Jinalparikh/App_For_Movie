@model IEnumerable<Movie_RentalApp.Models.Movies>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

<table class="table table-­‐bordered table-­‐hover">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Details", "Movies",new { Id = movie.Id}, null)
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }
    </tbody>
</table>

